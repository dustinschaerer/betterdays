<p id="notice"><%= notice %></p>

<h1>Listing Meats</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meats.each do |meat| %>
      <tr>
        <td><%= meat.name %></td>
        <td><%= meat.price %></td>
        <td><%= meat.description %></td>
        <td><%= link_to 'Show', meat %></td>
        <td><%= link_to 'Edit', edit_meat_path(meat) %></td>
        <td><%= link_to 'Destroy', meat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

