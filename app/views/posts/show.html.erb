<div class="container-main container p-t-3 p-b-3">
  <div class="row">
    <div class="col-xs-12 col-md-8">

      <article class="row p-b-2">
        <div class="col-xs-12">
          <h1><%= @post.title %></h1>
          <div><small class="text-muted"><i class="fa fa-clock-o"></i> <%= @post.created_at %></small></div><br>
          <div><%= @post.content.html_safe %></div>
        </div>
      </article>


      <% if current_admin_user %>
        <%= link_to 'Edit', edit_post_path(@post) %> |
        <%= link_to 'New Post', new_post_path %> |
      <% end %>
      <%= link_to 'Back', posts_path %>


    </div>
  </div>
</div>