<div class="container-main container p-t-3 p-b-3">

  <div class="row">
    <div class="col-xs-12 col-md-8">

      <h1>All Posts / News</h1>

      <% @posts.each do |post| %>

        <article class="row p-b-2">
          <div class="col-xs-12">
            <%= image_tag '' %>
            <h3><%= link_to post.title, post_path(post), class: "" %></h3>
            <div><%= post.content.html_safe %></div>
            <div class="pull-right"><i class="fa fa-clock-o"></i> <%= post.created_at %></div>
          </div>
        </article>

      <% end %>

      <br>

    </div>
  </div>
</div>